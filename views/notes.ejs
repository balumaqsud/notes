<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/main.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;900&display=swap"
      rel="stylesheet"
    />
    <title>Notes App</title>
  </head>
  <body>
    <div class="container">
      <div class="navbar mt-2 mb-1">
        <div class="main_title"><h4>Notes</h4></div>
        <div class="clear_btn_class hover ms-auto">
          <button
            class="clear_btn btn btn-outline-success border rounded px-3"
          >
            Clear all
          </button>
        </div>
      </div>
      <div
        class="main_div row d-flex justify-content-between mb-1"
        style="height: 670px"
      >
        <div
          class="notes_div col-12 col-md-9 align-self-stretch border rounded-3 p-3"
        >
          <form id="create-form" action="/create-item" method="post">
            <div class="title_div mb-2">
              <input
                type="text"
                class="form_title "
                id="form_input_title"
                placeholder="Enter title here"
                autocomplete="off"
              />
            </div>
            <div class="mb-1"> 
              <textarea
                class="form_body"
                id="form_textarea_body"
                rows="14"
                placeholder="What's in your mind?"
              ></textarea>
            </div>
            <div class="d-flex justify-content-end ">
            <button
              class="create_btn btn btn-outline-success border rounded px-3"
            > Save
            </button>
            </div>
          </form>
        </div>
        <div
          class="list_div col-12 col-md-3 align-self-stretch border rounded-3 p-3"
        >
          <h6 class="pb-2">All Notes</h6>
          <ul id="notes_ul" class="list-group">
            <% items.forEach((item) => { %>
            <li
              class="list-group-itemp p-1 mb-3 list-group-item-indo d-flex align-items-center justify-content-between"
            >
              <div>
                <h6 class="list_title m-0 "><%=item.title%></h6>
                <p class="list_body m-0 text-secondary"><%=item.body%></p>
                <p style="font-size: 12px;"><%=item.createdAt%></p>
              </div>
              <div>
                <button data-id="<%=item._id.toString()%>" class="delete_button btn btn-light btn-sm">
                  <img width="18px" height="22px" src="icons/trash.svg" />
                </button>
              </div>
            </li>
            <%})%></ul>
        </div>
      </div>
      <div
        class="footer d-flex align-items-center justify-content-center pb-0 mt-4"
      >
        <p>
          Â© 2025 by Ollobergan Abdulla | my
          <a
            href="https://github.com/balumaqsud"
            class="link-success link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"
            >Github</a
          >
        </p>
      </div>
    </div>
    <script src="/browser.js"></script>
    <script src="https://unpkg.com/axios@1.6.7/dist/axios.min.js"></script>
  </body>
</html>
